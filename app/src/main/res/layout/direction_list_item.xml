<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
        android:text="50 Washington St, Santa Clara, CA, 95050"
        android:id="@+id/address_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="left|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"/>

    <Button
        android:text="-> (GPS)"
        android:id="@+id/navigator_item_button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/gps_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/address_item_text_view"
        android:layout_toEndOf="@+id/address_item_text_view"/>

    <View
        android:id="@+id/list_item_line_separator"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/travel_time_item_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:text="30 minutes"
        android:id="@+id/travel_time_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navigator_item_button"
        android:layout_alignStart="@+id/address_item_text_view"/>


</RelativeLayout>